@model IEnumerable<WebStore_MVC.Models.Employee>
@{
    ViewData["Title"] = "Employees";
}

<div class="Container"> 
    <h3>@ViewData["Title"]</h3>

    <hr />
  <table class="table">

    <thead>
        <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th></th>

        </tr>
    </thead>
    <tbody>
        
        @foreach (var employee in Model)
        {
          <tr>
            <td>@employee.Id</td>
            <td>@employee.FirstName</td>
            <td>@employee.LastName</td>
            <td>@employee.Age</td>
            <td>
                <a asp-controller="Home" asp-action="EmployeeDetails" asp-route-id="@employee.Id">
                <i class="fa-edit"></i>
                </a>
            </td>
         </tr>
        }
    
    </tbody>
  </table>
    <p>
        <a asp-controller="Home" asp-action="Index">Main Page</a>
    </p>
</div>