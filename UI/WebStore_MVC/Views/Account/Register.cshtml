@model WebStore_MVC.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Sign Up";
}

<section id="form">
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="signup-form">               
                    <h2>New User Signup!</h2>
                    <form asp-action="Register" asp-antiforgery="true">
                        <div asp-validation-summary="ModelOnly" class="text-danger"/>

                        <input asp-for="UserName" placeholder="Name" />
                        <span asp-validation-for="UserName" class="text-danger"></span>

                        <input asp-for="Password" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                        <input asp-for="PasswordConfirm" placeholder="Confirm Password" />
                        <span asp-validation-for="PasswordConfirm"class="text-danger"></span>

                        <button type="submit" class="btn btn-default">Signup</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
