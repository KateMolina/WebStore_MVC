@model WebStore_MVC.ViewModels.CatalogViewModel

@{ ViewBag.Title = "Product Catalog"; }

<section id="advertisement">
    <div class="container">
        <img src="~/images/shop/advertisement.jpg" alt="" />
    </div>
</section>

<section>
    <div class="container">
        @await Component.InvokeAsync("BreadCrumbs")
        <div class="row">
            <div class="col-sm-3">
                <partial name="Partial/_LeftSlideBar" />
            </div>

            <div class="col-sm-9 padding-right">
                <div id="catalog-items-container">
                    <partial name="Partial/_FeaturedItems" model="Model.Products" />
                </div>

                <paging page-model="Model.PageViewModel"
                        page-action="Index"
                        page-url-SectionId="@Model.SectionId"
                        page-url-BrandId="@Model.BrandId"
                        page-url-PageSize="@Context.Request.Query["PageSize"]">

                </paging>
            </div>
        </div>
    </div>
</section>

@section Scripts{

    <script src="~/js/Catalog//CatalogLogic.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-loading-overlay/loadingoverlay.min.js"></script>


    <script>
    $(function(){
        Catalog.init({
            getViewLink: "@Url.Action("GetFeaturedItems", "Catalog")"
        });
    })
    </script>
}
